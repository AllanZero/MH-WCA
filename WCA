  <head>
  	<meta charset="utf-8">
    <title>Calculadora de Ataque</title>
  </head>
  
  <script>
    function funca() {
	var listop = document.getElementById("choose");
	listop.onclick = calcular;
    }
	window.onload = funca;
      
    function calcular() {
      var Attack = document.getElementById("Ataque").value;
      var Critical = document.getElementById("Critico").value;
      var Sharpness = filo.value;
      var arma = wpnType.options[wpnType.selectedIndex].text;
      var tipo = wpnType.value;
	  var ctlProb = 0.0025;
      var artillero;
      if (arma == "Arco" || arma == "Ballesta ligera" || arma == "Ballesta pesada") {
        Sharpness = 1;
      }
      var resultado = (Attack * Sharpness * (Critical * ctlProb + 1)) / tipo;
      var p = document.createElement("p");
      document.body.appendChild(p);
      p.textContent = "Su " + arma + " tiene " + Math.floor(resultado * tipo) + " de ataque y " + Math.floor(resultado) + " de 'ataque real'.";
    }

  </script>
  
  <body>
    <h1>Calcular el ataque</h1>
    <p>Ingresar los datos antes de elejir.</p>
	<form>
      <select id="wpnType">
