        <option value= "3.6">Hacha cargada</option>
        <option value= "1.2">Arco</option>
        <option value= "1.3">Ballesta ligera</option>
        <option value= "1.5">Ballesta pesada</option>
      </select> <br><br>
      <input type="text" id="Ataque" size="20" placeholder="Ataque del arma"><br><br>		  <input type="text" id="Critico" size="20" placeholder="% de critico"><br><br>
	  <select id="filo">
        <option value= "1.44">Morado</option>
        <option value= "1.32">Blanco</option>
        <option value= "1.2">Azul</option>
        <option value= "1.05">Verde</option>
